{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<turbo-frame id="id_user" class="container mx-auto p-4">
    <h1 class="text-center font-semibold text-xl py-4">S'inscrire</h1>
    {{ include('components/_toast.html.twig') }}

    <div class="flex flex-col lg:flex-row justify-center mb-12">
        <div class="flex justify-around text-center w-full">
            {{ form_start(registerForm, {'attr': {'class': 'bg-white border-b shadow-2xl rounded-3xl pb-4 w-11/12 sm:max-w-screen-sm mt-8'}}) }}
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(registerForm.email, null,  {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(registerForm.email, {"attr": {"class": "input rounded-lg w-full border-2"}}) }}
                </div>
                <div class="text-red-500">{{ form_errors(registerForm.email) }}</div>
            </div>
            {% for passwordField in registerForm.password %}
                    <div class="my-8 px-8 text-left">
                        {{ form_label(passwordField, null,  {"label_attr": {"class": "ml-2 font-bold"}}) }}
                        <div class="my-2 w-full input-group">
                            {{ form_widget(passwordField, {"attr": {"class": "w-full input border-2 rounded-lg"}}) }}
                            <div class="flex -mr-px">
                                <span class="flex items-center justify-center w-10 leading-normal rounded-lg rounded-l-none cursor-pointer"><i class="fas fa-eye"></i></span>
                            </div>
                        </div>
                        <div class="text-red-500">{{ form_errors(passwordField) }}</div>
                    </div>
            {% endfor %}
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(registerForm.firstname, null,  {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(registerForm.firstname, {"attr": {"class": "input rounded-lg w-full border-2"}}) }}
                </div>
                <div class="text-red-500">{{ form_errors(registerForm.firstname) }}</div>

            </div>
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(registerForm.lastname, null,  {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(registerForm.lastname, {"attr": {"class": "input rounded-lg w-full border-2"}}) }}
                </div>
                <div class="text-red-500">{{ form_errors(registerForm.lastname) }}</div>
            </div>
            {{ form_rest(registerForm) }}
            <button class="mt-8 bg-purple-500 hover:scale-105 rounded-full text-white text-lg px-4 py-2 mb-4" type="submit">
                S'inscrire
            </button>
            {{ form_end(registerForm) }}
        </div>
    </div>
</turbo-frame>
{% endblock %}