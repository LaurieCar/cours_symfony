{% extends 'base.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block body %}
<turbo-frame id="id_user" class="container mx-auto p-4">
    <h1 class="text-center font-semibold text-xl py-4">Ajouter un article</h1>
    {{ include('components/_toast.html.twig') }}

    <div class="flex flex-col lg:flex-row justify-center mb-12">
        <div class="flex justify-around text-center w-full">
            {{ form_start(articleForm, {'attr': {'class': 'bg-white border-b shadow-2xl rounded-3xl pb-4 w-11/12 sm:max-w-screen-sm mt-8'}}) }}
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(articleForm.title, null,  {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(articleForm.title, {"attr": {"class": "input rounded-lg w-full border-2"}}) }}
                </div>
            </div>
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(articleForm.content, null,  {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(articleForm.content, {"attr": {"class": "input rounded-lg w-full border-2"}}) }}
                </div>
            </div>
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(articleForm.createdAt, null,  {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(articleForm.createdAt, {"attr": {"class": "input rounded-lg w-full border-2"}}) }}
                </div>
            </div>
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(articleForm.cover, null,  {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(articleForm.cover, {"attr": {"class": "input rounded-lg w-full border-2"}}) }}
                </div>
            </div>
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(articleForm.user, 'Auteur', {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(articleForm.user, {"attr": {"class": "input rounded-lg w-full border-2 p-2"}}) }}
                </div>
            </div>
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(articleForm.categories, 'Cat√©gories', {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(articleForm.categories, {"attr": {"class": "input rounded-lg w-full border-2", "size": "5"}}) }}
                </div>
            </div>
            {{ form_rest(articleForm) }}
            <button class="mt-8 bg-purple-500 hover:scale-105 rounded-full text-white text-lg px-4 py-2 mb-4" type="submit">
                Ajouter un article
            </button>
            {{ form_end(articleForm) }}
        </div>
    </div>
</turbo-frame>
{% endblock %}