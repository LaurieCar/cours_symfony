{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
<turbo-frame id="id_user" class="container mx-auto p-4">
    <h1 class="text-center font-semibold text-xl py-4">Ajouter une catégorie</h1>
    {{ include('components/_toast.html.twig') }}

    <div class="flex flex-col lg:flex-row justify-center mb-12">
        <div class="flex justify-around text-center w-full">
            {{ form_start(categoryForm, {'attr': {'class': 'bg-white border-b shadow-2xl rounded-3xl pb-4 w-11/12 sm:max-w-screen-sm mt-8'}}) }}
            <div class="mt-8 md:mt-12 text-left">
                {{ form_label(categoryForm.label, null,  {"label_attr": {"class": "ml-10 font-bold"}}) }}
                <div class="mt-3 mx-0 px-8">
                    {{ form_widget(categoryForm.label, {"attr": {"class": "input rounded-lg w-full border-2"}}) }}
                </div>
                <div class="text-red-500">{{ form_errors(categoryForm.label) }}</div>
            </div>
            {{ form_rest(categoryForm) }}
            <button class="mt-8 bg-purple-500 hover:scale-105 rounded-full text-white text-lg px-4 py-2 mb-4" type="submit">
                Ajouter une catégorie
            </button>
            {{ form_end(categoryForm) }}
        </div>
    </div>
</turbo-frame>
{% endblock %}